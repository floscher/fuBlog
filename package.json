{
  "author": "fumiX GmbH & Co KG",
  "name": "@fumix/fu-blog",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.0.0 <19.0.0",
    "npm": ">=8.0.0 <9.0.0"
  },
  "workspaces": [
    "client",
    "common",
    "server"
  ],
  "scripts": {
    "start": "concurrently \"docker compose up\" \"npm run --workspace client dev\" \"npm run --workspace server dev\"",
    "start-client": "npm run dev --workspace client",
    "start-server": "npm run dev --workspace server",
    "lint": "npm run --workspaces lint",
    "lintfix": "npm run --workspaces lint --fix",
    "build": "npm run -w common build && npm run -ws build"
  },
  "devDependencies": {
    "concurrently": "7.6.0",
    "eslint-plugin-prettier": "4.2.1",
    "json-source-map": "0.6.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.1"
  }
}
